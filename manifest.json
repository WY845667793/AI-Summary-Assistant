{
    "manifest_version": 3,
    "name": "AI总结助手",
    "version": "0.0.1",
    "description": "AI总结助手",
    "icons": {
        "16": "icons/智能总结助手.png",
        "32": "icons/智能总结助手.png",
        "48": "icons/智能总结助手.png",
        "128": "icons/智能总结助手.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://aip.baidubce.com/*"
    ],
    "background": {
        "service_worker": "popup/background.js"
    },
    "action": {
        "default_icon": "icons/智能总结助手.png",
        "default_title": "AI总结助手",
        "default_popup": "popup/index.html"
    }
}
